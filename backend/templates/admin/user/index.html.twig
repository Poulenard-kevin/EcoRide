{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            <i class="bi bi-people-fill"></i> Gestion des utilisateurs
        </h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_admin_user_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Créer un utilisateur
            </a>
            <a href="{{ path('app_admin_employee_new') }}" class="btn btn-secondary">
                <i class="bi bi-person-badge"></i> Créer un employé
            </a>
            <a href="{{ path('app_admin_user_employees') }}" class="btn btn-outline-info">
                <i class="bi bi-list"></i> Liste Employés
            </a>
            <a href="{{ path('app_dashboard') }}" class="btn btn-outline-dark">
                <i class="bi bi-house"></i> Tableau de bord
            </a>
        </div>
    </div>

    {% if users|length > 0 %}
        <div class="table-responsive shadow-sm">
            <table class="table table-bordered table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center">ID</th>
                        <th>Nom complet</th>
                        <th>Email</th>
                        <th class="text-center">Rôles</th>
                        <th class="text-center">Inscription</th>
                        <th class="text-center">Statut</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td class="text-center">{{ user.id }}</td>
                            <td><strong>{{ user.firstName }} {{ user.lastName }}</strong></td>
                            <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                           <td class="text-center">
                                {% for role in user.roles %}
                                    {% if role == 'ROLE_ADMIN' %}
                                        {% set badge_class = 'danger' %}
                                    {% elseif role == 'ROLE_EMPLOYE' %}
                                        {% set badge_class = 'info text-dark' %}
                                    {% else %}
                                        {# ROLE_USER ou autres -> vert #}
                                        {% set badge_class = 'success' %}
                                    {% endif %}

                                    <span class="badge bg-{{ badge_class }}">
                                        {{ role_labels[role] ?? (role|replace({'ROLE_':''})|capitalize) }}
                                    </span>
                                {% endfor %}
                            </td>
                            <td class="text-center">
                                {% if user.createdAt is defined and user.createdAt %}
                                    {{ user.createdAt|date('d/m/Y à H:i') }}
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>

                            <td class="text-center">
                                {% if user.isActive() %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-danger">Suspendu</span>
                                {% endif %}
                            </td>

                            <td>
                                <div class="d-flex gap-2 justify-content-center flex-wrap">
                                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" 
                                       class="btn btn-sm btn-warning" 
                                       title="Modifier">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>

                                    {# Toggle Actif / Suspendu #}
                                    <form method="post" action="{{ path('app_admin_user_toggle', {id: user.id}) }}" onsubmit="return confirm('Confirmer la modification du statut ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                                        {% if user.isActive() %}
                                            <button class="btn btn-sm btn-secondary" type="submit">Suspendre</button>
                                        {% else %}
                                            <button class="btn btn-sm btn-success" type="submit">Activer</button>
                                        {% endif %}
                                    </form>

                                    {# Empêcher suppression de soi-même côté UI #}
                                    {% if app.user and app.user.id == user.id %}
                                        <button class="btn btn-sm btn-secondary" disabled title="Vous ne pouvez pas supprimer votre propre compte">
                                            <i class="bi bi-lock"></i> Supprimer
                                        </button>
                                    {% else %}
                                        <form method="post" 
                                              action="{{ path('app_admin_user_delete', {'id': user.id}) }}" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');" 
                                              style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                                <i class="bi bi-trash"></i> Supprimer
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-3 text-muted">
            <i class="bi bi-info-circle"></i> Total : <strong>{{ users|length }}</strong> utilisateur(s)
        </div>
    {% else %}
        <div class="alert alert-info mt-3">
            <i class="bi bi-info-circle"></i> Aucun utilisateur trouvé.
        </div>
    {% endif %}
</div>
{% endblock %}