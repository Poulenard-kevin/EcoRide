{% extends 'base.html.twig' %}

{% block title %}Mes covoiturages{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="bi bi-people-fill"></i> Liste des covoiturages</h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">
                <i class="bi bi-house"></i> Tableau de bord
            </a>
            <a href="{{ path('app_carpool_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Créer un covoiturage
            </a>
        </div>
    </div>

    {# --- Covoiturages actifs / en cours --- #}
    <h3>Covoiturages en cours / actifs</h3>
    {% if carpools_active is defined and carpools_active|length > 0 %}
        <div class="table-responsive shadow-sm mb-4">
            <table class="table table-bordered table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Départ</th>
                        <th>Arrivée</th>
                        <th>Prix/place</th>
                        <th>Places</th>
                        <th>Statut</th>
                        <th>Conducteur</th>
                        <th>Voiture</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for carpool in carpools_active %}
                        <tr>
                            <td class="text-center">{{ carpool.id }}</td>
                            <td>
                                <strong>{{ carpool.departureLocation }}</strong><br>
                                <small class="text-muted">
                                    {{ carpool.departureDate ? carpool.departureDate|date('d/m/Y') : '' }}
                                    à {{ carpool.departureTime ? carpool.departureTime|date('H:i') : '' }}
                                </small>
                            </td>
                            <td>
                                <strong>{{ carpool.arrivalLocation }}</strong><br>
                                <small class="text-muted">
                                    {{ carpool.arrivalDate ? carpool.arrivalDate|date('d/m/Y') : '' }}
                                    à {{ carpool.arrivalTime ? carpool.arrivalTime|date('H:i') : '' }}
                                </small>
                            </td>
                            <td class="text-center">
                                {% set price = carpool.pricePerSeat %}
                                {% set roundedPrice = (price // 5) * 5 %}
                                <span class="badge bg-warning text-dark">{{ roundedPrice }} crédits</span>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-info text-dark">
                                    {{ carpool.availableSeats }}/{{ carpool.totalSeats }}
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="badge {{ carpool.statusBadgeClass }}">
                                    {% if carpool.status == 'started' %}
                                        <i class="bi bi-clock"></i>
                                    {% elseif carpool.status == 'active' %}
                                        <i class="bi bi-play-circle"></i>
                                    {% elseif carpool.status == 'completed' %}
                                        <i class="bi bi-flag-checkered"></i>
                                    {% elseif carpool.status == 'cancelled' %}
                                        <i class="bi bi-x-circle"></i>
                                    {% elseif carpool.status == 'archived' %}
                                        <i class="bi bi-archive"></i>
                                    {% else %}
                                        <i class="bi bi-question-circle"></i>
                                    {% endif %}
                                    {{ carpool.statusLabel }}
                                </span>
                            </td>
                            <td>
                                {% if carpool.driver %}
                                    <a href="{{ path('app_user_show', {'id': carpool.driver.id}) }}">
                                        {{ carpool.driver.firstName }} {{ carpool.driver.lastName }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if carpool.car %}
                                    <a href="{{ path('app_car_show', {'id': carpool.car.id}) }}">
                                        {{ carpool.car.brand }} {{ carpool.car.model }}
                                    </a>
                                    <br>
                                    <small class="text-muted">({{ carpool.car.registration }})</small>
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="d-flex gap-2 flex-wrap justify-content-center">
                                    <a href="{{ path('app_carpool_show', {'id': carpool.id}) }}" class="btn btn-sm btn-primary" title="Voir">
                                        <i class="bi bi-eye"></i> Voir
                                    </a>

                                    {% if app.user == carpool.driver or is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path('app_carpool_edit', {'id': carpool.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                            <i class="bi bi-pencil"></i> Modifier
                                        </a>
                                        <form method="post" action="{{ path('app_carpool_delete', {'id': carpool.id}) }}" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce covoiturage ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ carpool.id) }}">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                                <i class="bi bi-trash"></i> Supprimer
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info mb-4">
            <i class="bi bi-info-circle"></i> Aucun covoiturage actif trouvé.
        </div>
    {% endif %}

    {# --- Covoiturages archivés --- #}
    <h3>Covoiturages archivés</h3>
    {% if carpools_archived is defined and carpools_archived|length > 0 %}
        <div class="table-responsive shadow-sm">
            <table class="table table-bordered table-striped table-hover align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>ID</th>
                        <th>Départ</th>
                        <th>Arrivée</th>
                        <th>Prix/place</th>
                        <th>Places</th>
                        <th>Statut</th>
                        <th>Conducteur</th>
                        <th>Voiture</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for carpool in carpools_archived %}
                        <tr class="table-muted">
                            <td class="text-center">{{ carpool.id }}</td>
                            <td>
                                <strong>{{ carpool.departureLocation }}</strong><br>
                                <small class="text-muted">
                                    {{ carpool.departureDate ? carpool.departureDate|date('d/m/Y') : '' }}
                                    à {{ carpool.departureTime ? carpool.departureTime|date('H:i') : '' }}
                                </small>
                            </td>
                            <td>
                                <strong>{{ carpool.arrivalLocation }}</strong><br>
                                <small class="text-muted">
                                    {{ carpool.arrivalDate ? carpool.arrivalDate|date('d/m/Y') : '' }}
                                    à {{ carpool.arrivalTime ? carpool.arrivalTime|date('H:i') : '' }}
                                </small>
                            </td>
                            <td class="text-center">
                                {% set price = carpool.pricePerSeat %}
                                {% set roundedPrice = (price // 5) * 5 %}
                                <span class="badge bg-warning text-dark">{{ roundedPrice }} crédits</span>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-info text-dark">
                                    {{ carpool.availableSeats }}/{{ carpool.totalSeats }}
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="badge {{ carpool.statusBadgeClass }}">
                                    <i class="bi bi-archive"></i> {{ carpool.statusLabel }}
                                </span>
                            </td>
                            <td>
                                {% if carpool.driver %}
                                    {{ carpool.driver.firstName }} {{ carpool.driver.lastName }}
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if carpool.car %}
                                    {{ carpool.car.brand }} {{ carpool.car.model }}
                                    <br><small class="text-muted">({{ carpool.car.registration }})</small>
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_carpool_show', {'id': carpool.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> Voir
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-secondary">
            <i class="bi bi-info-circle"></i> Aucun covoiturage archivé.
        </div>
    {% endif %}
</div>
{% endblock %}