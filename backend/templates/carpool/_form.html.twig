{{ form_start(form) }}

{% for field in form %}
    {# On masque certains champs calculés ou inutiles #}
    {% if field.vars.name not in ['availableSeats', 'totalSeats'] %}
        {# Optionnel : n'affiche pas le champ status s'il n'existe pas ou si tu veux l'afficher seulement en édition #}
        {% if field.vars.name != 'status' or form.status is defined %}
            <div class="mb-3">
                {{ form_label(field) }}
                {{ form_widget(field, {
                    'attr': {
                        'class': 'form-control' ~ (field.vars.errors|length ? ' is-invalid' : '')
                    }
                }) }}
                {{ form_errors(field) }}
            </div>
        {% endif %}
    {% endif %}
{% endfor %}

<button type="submit" class="btn btn-success">
    {{ button_label|default('Enregistrer') }}
</button>

{{ form_end(form) }}