{% extends 'base.html.twig' %}

{% block title %}Détails de la réservation{% endblock %}

{% block body %}
    <h1 class="mb-4"><i class="bi bi-ticket-fill"></i> Détails de la réservation #{{ booking.id }}</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h4 class="card-title mb-1">Réservation n°{{ booking.id }}</h4>
                    <h6 class="card-subtitle text-muted">
                        {% if booking.passenger %}
                            <i class="bi bi-person-fill"></i>
                            <a href="{{ path('app_user_show', {'id': booking.passenger.id}) }}">
                                {{ booking.passenger.firstName }} {{ booking.passenger.lastName }}
                            </a>
                        {% else %}
                            <span class="text-muted fst-italic">Aucun passager</span>
                        {% endif %}
                    </h6>
                </div>

                <div class="text-end">
                    <small class="text-muted">Statut</small><br>
                    <span class="badge {{ booking.statusBadgeClass|default('bg-secondary') }}">
                        {{ booking.statusLabel|default(booking.status|default('Inconnu')) }}
                    </span>
                </div>
            </div>

            <table class="table table-bordered table-striped mb-4">
                <tbody>
                    <tr>
                        <th style="width: 30%;">Date de réservation</th>
                        <td>{{ booking.bookingDate ? booking.bookingDate|date('d/m/Y H:i') : '<span class="text-muted fst-italic">—</span>' }}</td>
                    </tr>

                    <tr>
                        <th>Nombre de places réservées</th>
                        <td>{{ booking.reservedSeats ?: '<span class="text-muted fst-italic">—</span>' }}</td>
                    </tr>

                    <tr>
                        <th>Covoiturage</th>
                        <td>
                            {% if booking.carpool %}
                                <a href="{{ path('app_carpool_show', {'id': booking.carpool.id}) }}">
                                    <strong>{{ booking.carpool.departureLocation }} → {{ booking.carpool.arrivalLocation }}</strong><br>
                                    <small class="text-muted">{{ booking.carpool.departureDate ? booking.carpool.departureDate|date('d/m/Y') : 'N/A' }}
                                        {{ booking.carpool.departureTime ? 'à ' ~ booking.carpool.departureTime|date('H:i') : '' }}</small>
                                </a>
                            {% else %}
                                <span class="text-muted fst-italic">Aucun covoiturage associé</span>
                            {% endif %}
                        </td>
                    </tr>

                    <tr>
                        <th>Notes / Informations</th>
                        <td>
                            {% if booking.notes is defined and booking.notes %}
                                {{ booking.notes }}
                            {% else %}
                                <span class="text-muted fst-italic">Aucune</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>

            {# Actions - boutons alignés et même taille (hauteur) #}
            <div class="d-flex gap-2 flex-wrap align-items-center">
                <a href="{{ path('app_booking_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>

                <a href="{{ path('app_booking_edit', {'id': booking.id}) }}" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Modifier
                </a>

                {{ include('booking/_delete_form.html.twig', { 'btn_class': 'btn btn-danger' }) }}

                <form method="post" action="{{ path('app_booking_validate', {'id': booking.id}) }}" style="display:inline;"
                    onsubmit="return confirm('Valider ce trajet et laisser un avis ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('validateTrip' ~ booking.id) }}">
                    <button class="btn btn-success">
                        <i class="bi bi-check-lg"></i> Valider le trajet
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}