{% extends 'base.html.twig' %}

{% block title %}Mon tableau de bord{% endblock %}

{% block body %}
    <h1 class="mb-4">Bienvenue, {{ app.user.firstName }} üëã</h1>

    <div class="row g-3">
        {# üîπ Bloc : R√©servations #}
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0"><i class="bi bi-calendar-check"></i> Mes prochaines r√©servations</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    {% if myBookings is not empty %}
                        <ul class="list-group list-group-flush">
                            {% for booking in myBookings %}
                                <li class="list-group-item d-flex justify-content-between align-items-start">
                                    <div>
                                        R√©servation n¬∞{{ booking.id }} pour
                                        <a href="{{ path('app_carpool_show', {'id': booking.carpool.id}) }}">
                                            {{ booking.carpool.departureLocation }} ‚Üí {{ booking.carpool.arrivalLocation }}
                                        </a>
                                        le {{ booking.carpool.departureDate|date('d/m/Y') }}
                                    </div>
                                    <div class="d-flex flex-column align-items-end">
                                        <span class="badge bg-info text-dark mb-1">{{ booking.reservedSeats }} place(s)</span>

                                        {# Badge de statut #}
                                        {% if booking.status == 'pending' %}
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock"></i> En attente
                                            </span>
                                        {% elseif booking.status == 'confirmed' %}
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Confirm√©e
                                            </span>
                                        {% elseif booking.status == 'refused' %}
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> Refus√©e
                                            </span>
                                        {% elseif booking.status == 'cancelled' %}
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-slash-circle"></i> Annul√©e
                                            </span>
                                        {% endif %}
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>Vous n'avez pas de r√©servations √† venir.</p>
                    {% endif %}

                    {# Bouton "Voir toutes mes r√©servations" en bas √† gauche #}
                    <div class="mt-auto">
                        <a href="{{ path('app_booking_index') }}" class="btn btn-sm btn-outline-primary">Voir toutes mes r√©servations</a>
                    </div>
                </div>
            </div>
        </div>

        {# üîπ Bloc : Covoiturages #}
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0"><i class="bi bi-car-front-fill"></i> Mes covoiturages propos√©s</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    {% if myCarpools is not empty %}
                        <ul class="list-group list-group-flush">
                            {% for carpool in myCarpools %}
                                <li class="list-group-item d-flex justify-content-between align-items-start">
                                    <div>
                                        <a href="{{ path('app_carpool_show', {'id': carpool.id}) }}">
                                            {{ carpool.departureLocation }} ‚Üí {{ carpool.arrivalLocation }}
                                        </a> le {{ carpool.departureDate|date('d/m/Y') }}
                                    </div>
                                    <div class="d-flex flex-column align-items-end">
                                        <span class="badge bg-success mb-1">{{ carpool.availableSeats }} place(s) dispo</span>

                                        {# Badge de statut du covoiturage avec couleur dynamique #}
                                        <span class="badge 
                                            {% if carpool.status == STATUS_ACTIVE %}bg-success
                                            {% elseif carpool.status == STATUS_COMPLETED %}bg-info text-dark
                                            {% elseif carpool.status == STATUS_CANCELLED %}bg-danger
                                            {% elseif carpool.status == STATUS_ARCHIVED %}bg-secondary
                                            {% else %}bg-light text-dark
                                            {% endif %}
                                        ">
                                            {% if carpool.status == STATUS_ACTIVE %}
                                                <i class="bi bi-play-circle"></i>
                                            {% elseif carpool.status == STATUS_COMPLETED %}
                                                <i class="bi bi-flag-checkered"></i>
                                            {% elseif carpool.status == STATUS_CANCELLED %}
                                                <i class="bi bi-x-circle"></i>
                                            {% elseif carpool.status == STATUS_ARCHIVED %}
                                                <i class="bi bi-archive"></i>
                                            {% else %}
                                                <i class="bi bi-question-circle"></i>
                                            {% endif %}
                                            {{ carpool.statusLabel }}
                                        </span>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>Vous n'avez pas encore propos√© de covoiturage.</p>
                    {% endif %}

                    {# Bouton "Voir tous mes covoiturages" en bas √† gauche #}
                    <div class="mt-auto">
                        <a href="{{ path('app_carpool_index') }}" class="btn btn-sm btn-outline-primary">Voir tous mes covoiturages</a>
                    </div>
                </div>
            </div>
        </div>
    </div> {# <-- fermeture de la premi√®re row g-3 #}

    {# ‚úÖ Bloc : V√©hicules #}
    <div class="row g-3 mt-3">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="card-title mb-0"><i class="bi bi-car-front"></i> Mes v√©hicules</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    {% if myCars is not empty %}
                        <ul class="list-group list-group-flush">
                            {% for car in myCars %}
                                <li class="list-group-item">
                                    <a href="{{ path('app_car_show', {'id': car.id}) }}">
                                        {{ car.brand }} {{ car.model }}
                                    </a>
                                    <span class="text-muted ms-2">({{ car.registration }})</span>
                                    <span class="badge bg-secondary float-end">{{ car.seats }} places</span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>Vous n'avez pas encore enregistr√© de v√©hicule.</p>
                    {% endif %}

                    {# Bouton "Voir tous mes v√©hicules" en bas √† gauche #}
                    <div class="mt-3">
                        <a href="{{ path('app_car_index') }}" class="btn btn-sm btn-outline-primary">Voir tous mes v√©hicules</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# üîú Bloc "Mes avis" (aper√ßu 3 derniers re√ßus / 3 derniers √©mis) #}
    <div class="row g-3 mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-inbox-fill"></i> Avis re√ßus</h5>
                </div>

                <div class="card-body d-flex flex-column">
                    {% if receivedReviews is defined and receivedReviews|length > 0 %}
                        {% for r in receivedReviews %}
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>{{ r.author ? (r.author.firstName ~ ' ' ~ r.author.lastName)|trim : 'Anonyme' }}</strong>
                                        <div class="small text-muted">{{ r.date ? r.date|date('d/m/Y') : '' }}</div>
                                    </div>
                                    <div class="text-end">
                                        <span class="text-warning" aria-hidden="true">
                                            {% for i in 1..5 %}
                                                {% if i <= (r.rating|default(0)) %}
                                                    <i class="bi bi-star-fill"></i>
                                                {% else %}
                                                    <i class="bi bi-star"></i>
                                                {% endif %}
                                            {% endfor %}
                                        </span>
                                    </div>
                                </div>
                                {% if r.comment %}
                                    <p class="mb-0 mt-2">{{ r.comment|length > 140 ? (r.comment|slice(0,140) ~ '‚Ä¶') : r.comment|e }}</p>
                                {% endif %}
                                <hr class="my-2">
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle"></i> Aucun avis re√ßu pour le moment.
                        </div>
                    {% endif %}

                    {# Bouton "Voir tout" en bas √† gauche (comme les autres) #}
                    <div class="mt-auto" style="padding-top:15px;">
                        <a href="{{ path('review_my_authored') }}" class="btn btn-sm btn-outline-primary">Voir tout</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-send-fill"></i> Mes avis</h5>
                </div>

                <div class="card-body d-flex flex-column">
                    {% if authoredReviews is defined and authoredReviews|length > 0 %}
                        {% for r in authoredReviews %}
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>Pour : {{ r.target ? (r.target.firstName ~ ' ' ~ r.target.lastName)|trim : '‚Äî' }}</strong>
                                        <div class="small text-muted">{{ r.date ? r.date|date('d/m/Y') : '' }}</div>
                                    </div>
                                    <div class="text-end">
                                        <span class="text-warning" aria-hidden="true">
                                            {% for i in 1..5 %}
                                                {% if i <= (r.rating|default(0)) %}
                                                    <i class="bi bi-star-fill"></i>
                                                {% else %}
                                                    <i class="bi bi-star"></i>
                                                {% endif %}
                                            {% endfor %}
                                        </span>
                                    </div>
                                </div>

                                {% if r.comment %}
                                    <p class="mb-0 mt-2">{{ r.comment|length > 140 ? (r.comment|slice(0,140) ~ '‚Ä¶') : r.comment|e }}</p>
                                {% endif %}

                                {# statut visible pour l'auteur (ex: en attente) #}
                                <div class="mt-2">
                                    {% if r.validated is defined %}
                                        {% if r.validated %}
                                            <span class="badge bg-success">Valid√©</span>
                                        {% else %}
                                            <span class="badge bg-warning text-dark">En attente</span>
                                        {% endif %}
                                    {% endif %}
                                </div>

                                <hr class="my-2">
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle"></i> Vous n'avez encore laiss√© aucun avis.
                        </div>
                    {% endif %}

                    {# Bouton "Voir tout" en bas √† gauche (comme les autres) #}
                    <div class="mt-auto" style="padding-top:15px;">
                        <a href="{{ path('review_my_authored') }}" class="btn btn-sm btn-outline-primary">Voir tout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}