{% extends 'base.html.twig' %}

{% block title %}Mes véhicules{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="bi bi-car-front"></i> Mes véhicules</h1>
        <a href="{{ path('app_car_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Ajouter un véhicule
        </a>
    </div>

    {% if cars|length > 0 %}
        <div class="table-responsive shadow-sm">
            <table class="table table-bordered table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Marque</th>
                        <th>Modèle</th>
                        <th>Immatriculation</th>
                        <th>Places</th>
                        <th>Propriétaire</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for car in cars %}
                        <tr>
                            <td>{{ car.id }}</td>
                            <td>{{ car.brand }}</td>
                            <td>{{ car.model }}</td>
                            <td>{{ car.registration }}</td>
                            <td><span class="badge bg-info text-dark">{{ car.seats }}</span></td>
                            <td>
                                {% if car.owner %}
                                    {{ car.owner.firstName }} {{ car.owner.lastName }}
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="{{ path('app_car_show', {'id': car.id}) }}" class="btn btn btn-primary">
                                        <i class="bi bi-eye"></i> Voir
                                    </a>
                                    <a href="{{ path('app_car_edit', {'id': car.id}) }}" class="btn btn btn-warning">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                    {{ include('car/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Vous n’avez pas encore ajouté de véhicule.
        </div>
    {% endif %}
</div>
{% endblock %}