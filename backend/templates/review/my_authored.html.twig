{# templates/review/my_authored.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mes avis{% endblock %}

{% block body %}
<div class="container py-4">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between">
      <h3 class="h6 mb-0">Mes avis</h3>
      <div class="small text-white-50">{{ reviews|length }} avis</div>
    </div>

    <div class="card-body">
      {% if reviews is empty %}
        <div class="alert alert-info mb-0">Vous n'avez encore laissé aucun avis.</div>
      {% else %}
        <div class="list-group list-group-flush">
          {% for r in reviews %}
            <div class="list-group-item">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <div class="fw-semibold">
                    Pour :
                    {% if r.target %}
                      <a href="{{ path('app_user_show', {id: r.target.id}) }}">
                        {{ (r.target.firstName ~ ' ' ~ r.target.lastName)|trim }}
                      </a>
                    {% else %}
                      —
                    {% endif %}
                  </div>
                  <div class="small text-muted">{{ r.date ? r.date|date('d/m/Y H:i') : '' }}</div>
                </div>

                <div class="text-end">
                  <div class="text-warning mb-1" title="{{ r.rating }} / 5">
                    {% for i in 1..5 %}
                      <i class="bi {% if i <= r.rating %}bi-star-fill{% else %}bi-star{% endif %}"></i>
                    {% endfor %}
                  </div>
                  <div class="small text-muted">{{ r.rating }}/5</div>
                </div>
              </div>

              <div class="mt-2 mb-3">
                {% if r.comment %}
                  <div
                    {% if r.comment|length > 120 %}data-bs-toggle="tooltip" title="{{ r.comment|e }}" {% endif %}>
                    {{ r.comment|striptags|length > 120 ? (r.comment|striptags|slice(0,120) ~ '…') : r.comment|striptags }}
                  </div>
                {% else %}
                  <div class="text-muted">—</div>
                {% endif %}
              </div>

              <div class="d-flex gap-2">
                <a href="{{ path('review_edit', {id: r.id}) }}" class="btn btn-sm btn-outline-secondary">
                  <i class="bi bi-pencil"></i> Modifier
                </a>

                <form method="post" action="{{ path('review_delete_front', {id: r.id}) }}" onsubmit="return confirm('Supprimer cet avis ?');" class="m-0">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ r.id) }}">
                  <button class="btn btn-sm btn-outline-danger">
                    <i class="bi bi-trash"></i> Supprimer
                  </button>
                </form>

                {% if r.carpool %}
                  <a href="{{ path('app_carpool_show', {id: r.carpool.id}) }}" class="btn btn-sm btn-outline-primary ms-auto">
                    <i class="bi bi-car-front"></i> Voir Trajet
                  </a>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}