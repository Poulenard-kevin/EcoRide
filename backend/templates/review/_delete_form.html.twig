{# templates/review/_delete_form.html.twig #}
<form method="post" action="{{ path('review_delete_front', {'id': review.id}) }}" onsubmit="return confirm('Supprimer cet avis ?');" class="d-inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
    <button class="btn btn-sm btn-outline-danger">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>